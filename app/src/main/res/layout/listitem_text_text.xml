<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="@dimen/settingList_height">

    <TextView
        android:id="@+id/settingTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:layout_centerVertical="true"
        android:paddingStart="@dimen/settingList_marginStart"
        android:textColor="@color/color_listTitle"/>

    <TextView
        android:id="@+id/settingData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:paddingEnd="@dimen/settingList_marginEnd"
        android:text="item 1item 1item 1" />

</RelativeLayout>